{
    "name": "squid/patreon",
    "version": "0.1.0",
    "keywords": ["Patreon"],
    "description": "PHP library for interacting with the Patreon API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Samuel Ryan",
            "email": "sryan@1f991.com"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "php-http/client-implementation": "^1.0",
        "guzzlehttp/psr7": "^1.4",
        "php-http/message": "^1.6",
        "php-http/httplug": "^1.1",
        "php-http/discovery": "^1.4",
        "woohoolabs/yang": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "3.*",
        "php-http/mock-client": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Squid\\Patreon\\": "src/Patreon/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Squid\\Patreon\\Tests\\": "tests/"
        }
    },
    "scripts" : {
        "style": ["@style-src", "@style-tests"],
        "style-src": "phpcs src/ -p --colors --standard=PSR1,PSR2,PEAR --exclude=PEAR.Commenting.FileComment,PEAR.Commenting.ClassComment",
        "style-tests": "phpcs tests/ -p --colors --standard=PSR1,PSR2,PEAR --exclude=PEAR.Commenting.FunctionComment,PEAR.Commenting.FileComment,PEAR.Commenting.ClassComment",
        "style-fix": "phpcbf src/ tests/",
        "test": "phpunit --colors=always",
        "check": ["@style", "@test"]
    }
}
